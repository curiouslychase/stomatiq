---
interface Props {
  label: string;
  equation: string;
  dotClass?: string;
  dotText: string;
}

const {
  label,
  equation,
  dotClass = "bg-foreground/50",
  dotText,
} = Astro.props;
---

<div class="flex flex-col rounded-3xl border border-foreground/12 bg-background-alt/50 p-6">
  <span class="text-[0.65rem] font-mono uppercase tracking-[0.14em] text-foreground/60">
    {label}
  </span>
  <span class="mt-4 inline-flex items-center rounded-2xl border border-foreground/15 bg-background-alt px-6 py-4 text-center font-mono text-base font-bold uppercase tracking-[0.08em] text-foreground">
    {equation}
  </span>
  <div class="mt-4 flex items-center gap-2 text-[0.65rem] font-mono uppercase tracking-[0.12em] text-foreground/50">
    <span class={`inline-flex h-2 w-2 rounded-full ${dotClass}`}></span>
    <span>{dotText}</span>
  </div>
</div>
