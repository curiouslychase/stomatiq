---
interface Props {
  index: string;
  title: string;
  items: string[];
}

const { index, title, items } = Astro.props;
---

<div class="relative flex flex-col rounded-3xl border border-foreground/10 bg-background-alt/70 px-7 py-8 md:pl-16">
  <span class="text-xs font-mono uppercase tracking-[0.16em] text-foreground/60">Domain {index}</span>
  <span class="mt-4 text-xl font-semibold uppercase tracking-[0.08em] text-foreground">{title}</span>
  <ul class="mt-6 space-y-3 text-sm leading-7 text-foreground/75">
    {items.map((item) => (
      <li class="flex items-start gap-3">
        <span class="mt-2 inline-flex h-1.5 w-1.5 rounded-full bg-foreground/50"></span>
        <span>{item}</span>
      </li>
    ))}
  </ul>
  <span class="absolute left-8 top-10 hidden h-3 w-3 -translate-x-1/2 rounded-full bg-foreground md:block"></span>
</div>
