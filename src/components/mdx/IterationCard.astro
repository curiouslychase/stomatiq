---
interface Props {
  label: string;
  title: string;
  value: string;
  barWidth?: string;
  barClass?: string;
  description: string;
  badgeClass?: string;
}

const {
  label,
  title,
  value,
  barWidth = "100%",
  barClass = "bg-foreground",
  description,
  badgeClass = "text-foreground/50",
} = Astro.props;
---

<div class="flex flex-col rounded-2xl border border-foreground/8 bg-background-alt/70 p-5">
  <span class={`text-[0.7rem] font-mono uppercase tracking-[0.14em] ${badgeClass}`}>
    {label}
  </span>
  <div class="mt-4 flex items-baseline justify-between font-mono text-sm uppercase tracking-[0.08em] text-foreground">
    <span>{title}</span>
    <span class="text-lg font-bold">{value}</span>
  </div>
  <div class="mt-3 h-2 rounded-full bg-foreground/10">
    <div class={`h-full rounded-full ${barClass}`} style={`width: ${barWidth};`}></div>
  </div>
  <p class="mt-4 text-xs leading-5 text-foreground/60">{description}</p>
</div>
