<footer class="w-screen px-4 md:px-6 py-12 md:py-16 mt-auto">
  <div
    class="relative rounded-2xl border border-black/[.08] dark:border-white/[.12] bg-background/80 w-6xl mx-auto"
  >
    <div class="grid grid-cols-1 md:grid-cols-4 gap-8 p-6 md:p-10">
      <div class="md:col-span-3"></div>
      <div class="md:col-span-1">
        <div class="flex items-center justify-end">
          <div
            class="inline-flex items-center rounded-2xl border border-black/20 dark:border-white/20 px-2 py-1.5 gap-1 text-xs"
            style="font-family: var(--font-mono);"
          >
            <button
              data-theme="dark"
              class="w-7 h-7 inline-flex items-center justify-center opacity-70"
              aria-label="Dark"
            >
              <svg
                viewBox="0 0 24 24"
                width="16"
                height="16"
                fill="none"
                stroke="currentColor"
                stroke-width="2"
                stroke-linecap="round"
                stroke-linejoin="round"
                ><path d="M21 12.79A9 9 0 1 1 11.21 3 7 7 0 0 0 21 12.79z"
                ></path></svg
              >
            </button>
            <div
              id="theme-pill"
              class="relative inline-flex items-center rounded-xl bg-foreground text-background px-2 h-7 transition-all"
            >
              <svg
                id="theme-pill-icon"
                viewBox="0 0 24 24"
                width="14"
                height="14"
                class="mr-1"
                fill="none"
                stroke="currentColor"
                stroke-width="2"
                stroke-linecap="round"
                stroke-linejoin="round"
                ><circle cx="12" cy="12" r="5"></circle><line
                  x1="12"
                  y1="1"
                  x2="12"
                  y2="3"></line><line x1="12" y1="21" x2="12" y2="23"
                ></line><line x1="4.22" y1="4.22" x2="5.64" y2="5.64"
                ></line><line x1="18.36" y1="18.36" x2="19.78" y2="19.78"
                ></line><line x1="1" y1="12" x2="3" y2="12"></line><line
                  x1="21"
                  y1="12"
                  x2="23"
                  y2="12"></line><line x1="4.22" y1="19.78" x2="5.64" y2="18.36"
                ></line><line x1="18.36" y1="5.64" x2="19.78" y2="4.22"
                ></line></svg
              >
              <span id="theme-pill-text" class="tracking-wide">LIGHT</span>
            </div>
            <button
              data-theme="system"
              class="w-7 h-7 inline-flex items-center justify-center opacity-70"
              aria-label="System"
            >
              <svg
                viewBox="0 0 24 24"
                width="16"
                height="16"
                fill="none"
                stroke="currentColor"
                stroke-width="2"
                stroke-linecap="round"
                stroke-linejoin="round"
                ><rect x="2" y="3" width="20" height="14" rx="2" ry="2"
                ></rect><line x1="8" y1="21" x2="16" y2="21"></line><line
                  x1="12"
                  y1="17"
                  x2="12"
                  y2="21"></line></svg
              >
            </button>
          </div>
        </div>
      </div>
    </div>

    <div class="absolute left-6 bottom-6">
      <div class="h-[40px] w-[40px] text-foreground/90">
        <svg viewBox="0 0 1191 1178" class="block h-full w-full" aria-hidden>
          <g fill="currentColor">
            <ellipse
              cx="159.468"
              cy="113.171"
              rx="159.468"
              ry="113.171"
              transform="matrix(1 0 0 -1 417 226.342)"></ellipse>
            <ellipse
              cx="159.468"
              cy="113.171"
              rx="159.468"
              ry="113.171"
              transform="matrix(0 1 1 0 924.238 414.643)"></ellipse>
            <ellipse
              cx="159.468"
              cy="113.171"
              rx="159.468"
              ry="113.171"
              transform="matrix(-1 0 0 1 735.937 921.88)"></ellipse>
            <ellipse
              cx="159.468"
              cy="113.171"
              rx="159.468"
              ry="113.171"
              transform="matrix(0 -1 -1 0 228.7 733.579)"></ellipse>
            <ellipse cx="575.757" cy="574.351" rx="128.757" ry="127.351"
            ></ellipse>
            <ellipse
              cx="308.178"
              cy="294.178"
              rx="128.481"
              ry="88.1456"
              transform="rotate(-45 308.178 294.178)"></ellipse>
            <ellipse
              cx="841.281"
              cy="304.178"
              rx="128.481"
              ry="88.1456"
              transform="rotate(45 841.281 304.178)"></ellipse>
            <ellipse
              cx="841.281"
              cy="827.281"
              rx="128.481"
              ry="88.1456"
              transform="rotate(135 841.281 827.281)"></ellipse>
            <ellipse
              cx="308.178"
              cy="837.281"
              rx="128.481"
              ry="88.1456"
              transform="rotate(-135 308.178 837.281)"></ellipse>
          </g>
        </svg>
      </div>
    </div>
  </div>

  <script is:inline>
    const pill = document.getElementById("theme-pill");
    const pillText = document.getElementById("theme-pill-text");
    const pillIcon = document.getElementById("theme-pill-icon");
    const btns = Array.from(document.querySelectorAll("button[data-theme]"));
    const getSystem = () =>
      window.matchMedia("(prefers-color-scheme: dark)").matches
        ? "dark"
        : "light";
    const applyTheme = (value) => {
      const theme = value === "system" ? getSystem() : value;
      document.documentElement.classList.toggle("dark", theme === "dark");
      if (pill && pillText) {
        pillText.textContent = theme.toUpperCase();
        // swap icon: sun for light, monitor for system, moon for dark
        if (theme === "dark") {
          pillIcon.outerHTML =
            '<svg id="theme-pill-icon" viewBox="0 0 24 24" width="14" height="14" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round"><path d="M21 12.79A9 9 0 1 1 11.21 3 7 7 0 0 0 21 12.79z"/></svg>';
        } else if (value === "system") {
          pillIcon.outerHTML =
            '<svg id="theme-pill-icon" viewBox="0 0 24 24" width="14" height="14" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round"><rect x="2" y="3" width="20" height="14" rx="2" ry="2"/><line x1="8" y1="21" x2="16" y2="21"/><line x1="12" y1="17" x2="12" y2="21"/></svg>';
        } else {
          pillIcon.outerHTML =
            '<svg id="theme-pill-icon" viewBox="0 0 24 24" width="14" height="14" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round"><circle cx="12" cy="12" r="5"/><line x1="12" y1="1" x2="12" y2="3"/><line x1="12" y1="21" x2="12" y2="23"/><line x1="4.22" y1="4.22" x2="5.64" y2="5.64"/><line x1="18.36" y1="18.36" x2="19.78" y2="19.78"/><line x1="1" y1="12" x2="3" y2="12"/><line x1="21" y1="12" x2="23" y2="12"/><line x1="4.22" y1="19.78" x2="5.64" y2="18.36"/><line x1="18.36" y1="5.64" x2="19.78" y2="4.22"/></svg>';
        }
      }
    };
    const saved = localStorage.getItem("theme") || "system";
    applyTheme(saved);
    btns.forEach((b) =>
      b.addEventListener("click", () => {
        const value = b.getAttribute("data-theme");
        localStorage.setItem("theme", value);
        applyTheme(value);
      })
    );
    window
      .matchMedia("(prefers-color-scheme: dark)")
      .addEventListener("change", () => {
        const current = localStorage.getItem("theme") || "system";
        if (current === "system") applyTheme("system");
      });
  </script>
</footer>
