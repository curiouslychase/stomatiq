---
interface Props {
  title?: string;
}

const { title } = Astro.props as Props;
---

<section
  class="callout relative overflow-hidden rounded-3xl border border-foreground/15 bg-foreground/5 p-6 md:p-8"
>
  <div class="pointer-events-none absolute inset-0 bg-gradient-to-br from-foreground/10 via-transparent to-transparent" />
  <div class="relative space-y-4">
    {title && (
      <h3 class="text-sm font-semibold uppercase tracking-[0.2em] text-foreground/60">
        {title}
      </h3>
    )}
    <div class="text-[20px] leading-9 text-foreground/90 md:text-[22px] md:leading-10">
      <slot />
    </div>
  </div>
</section>
