---
import BaseLayout from "../../layouts/BaseLayout.astro";
import { getAllSpecSectionsMeta } from "../../lib/spec";

const sections = getAllSpecSectionsMeta();
if (sections.length) {
  return Astro.redirect(`/ai-workflow-open-spec/${sections[0].slug}/`);
}
---

<BaseLayout title="AI Workflow Open Spec">
  <main class="mx-auto max-w-3xl px-4 py-10">
    <h1 class="text-5xl uppercase">AI Workflow Open Spec</h1>
    <p class="mt-3 text-[15px] leading-7 text-foreground/70">
      Specification content is not available.
    </p>
  </main>
</BaseLayout>
