---
import BaseLayout from "../layouts/BaseLayout.astro";
---

<BaseLayout title="Design System">
  <main class="mx-auto max-w-6xl px-4 md:px-6 py-10">
    <h1 class="text-3xl font-semibold tracking-tight">Design System</h1>
    <p class="mt-3 text-[15px] leading-7 text-foreground/70">
      Tokens and components that power this website.
    </p>

    <section class="mt-10">
      <h2 class="text-2xl font-semibold tracking-tight">Color Tokens</h2>
      <div class="mt-6 grid grid-cols-2 sm:grid-cols-3 md:grid-cols-4 gap-6">
        <div
          class="rounded-md border border-black/[.08] dark:border-white/[.12]"
        >
          <div class="h-20 rounded-t-md bg-background"></div>
          <div class="p-3 text-sm">
            <div class="font-medium">Background</div>
            <div class="text-foreground/70">--background</div>
          </div>
        </div>
      </div>
    </section>
  </main>
</BaseLayout>
